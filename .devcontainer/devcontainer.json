{
    "name": "Codespace Development Environment",
    "dockerComposeFile": "../codespace/docker-compose.yml",
    "service": "final",
    "workspaceFolder": "/workspace",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-azuretools.vscode-docker",
                "ms-vscode.vscode-typescript-tslint-plugin",
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode"
            ],
            "settings": {
                "terminal.integrated.shell.linux": "/bin/zsh"
            }
        }
    },
    "remoteUser": "vscode",
    "forwardPorts": [8080, 5901, 5902, 5903],  // Added more VNC ports for different servers
    "containerEnv": {
        "MEGA_EMAIL": "${MEGA_EMAIL}",
        "MEGA_PASSWORD": "${MEGA_PASSWORD}",
        "VNC_PASSWORD": "1234"  // You can make this configurable
    },
    "initializeCommand": "docker-compose -f ${localWorkspaceFolder}/codespace/docker-compose.yml build",  // Removed --no-cache to speed up
    "postCreateCommand": "/codespace/start.sh"
}
