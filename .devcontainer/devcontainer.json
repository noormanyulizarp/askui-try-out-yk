{
    "name": "Codespace Development Environment",
    "build": {
        "dockerfile": "../codespace/codespace-Dockerfile",
        "context": "../codespace"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-azuretools.vscode-docker",
                "ms-vscode.vscode-typescript-tslint-plugin",
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode"
            ]
        }
    },
    "remoteUser": "vscode",
    "postCreateCommand": "/home/vscode/mount-cloud-storage.sh && /home/vscode/start-vnc.sh",  // Menjalankan skrip untuk mount dan VNC
    "onCreateCommand": "/home/vscode/start-vnc.sh",  // Memastikan VNC server dimulai saat kontainer dibuat
    "forwardPorts": [5901, 6080],
    "portsAttributes": {
        "5901": {
            "label": "VNC Server",
            "onAutoForward": "notify"
        },
        "6080": {
            "label": "noVNC",
            "onAutoForward": "openBrowser"
        }
    },
    "containerEnv": {
        "MEGA_EMAIL": "${MEGA_EMAIL}",
        "MEGA_PASSWORD": "${MEGA_PASSWORD}"
    }
}
